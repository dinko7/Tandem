<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="member"
            type="com.demo.domain.CommunityMember" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/margin_15"
        android:paddingStart="@dimen/margin_15"
        android:background="@color/light_brown">

        <io.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/profilePicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:shape_roundRect_bottomLeftRadius="10dp"
            app:shape_roundRect_bottomRightRadius="10dp"
            app:shape_roundRect_topLeftRadius="10dp"
            app:shape_roundRect_topRightRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:imageUrl="@{member.pictureUrl}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@tools:sample/avatars" />
        </io.github.florent37.shapeofview.shapes.RoundRectView>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@{member.firstName}"
            android:layout_marginStart="@dimen/margin_10"
            app:layout_constraintTop_toTopOf="@id/profilePicture"
            app:layout_constraintStart_toEndOf="@id/profilePicture"
            tools:text="Dinko" />

        <TextView
            android:id="@+id/topic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@{member.topic}"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintStart_toStartOf="@id/name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="What's something not many people know about you?" />

        <TextView
            android:id="@+id/titleNative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_native"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_5"
            app:layout_constraintStart_toStartOf="@id/topic"
            app:layout_constraintBottom_toBottomOf="@id/profilePicture" />

        <TextView
            android:id="@+id/nativeLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:text="@{member.natives[0].toUpperCase()}"
            app:layout_constraintBottom_toBottomOf="@id/titleNative"
            app:layout_constraintStart_toEndOf="@id/titleNative"
            app:layout_constraintTop_toTopOf="@+id/titleNative"
            tools:text="EN" />

        <TextView
            android:id="@+id/titleLearns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:text="@string/title_learns"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/titleNative"
            app:layout_constraintEnd_toStartOf="@id/learnsLanguage"
            app:layout_constraintStart_toEndOf="@+id/nativeLanguage" />

        <TextView
            android:id="@+id/learnsLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:text="@{member.learns[0].toUpperCase()}"
            app:layout_constraintStart_toEndOf="@id/titleLearns"
            app:layout_constraintBottom_toBottomOf="@id/titleLearns"
            app:layout_constraintTop_toTopOf="@+id/titleLearns"
            tools:text="EN" />

        <ImageView
            android:id="@+id/likeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/margin_15"
            android:src="@drawable/ic_thumb_up_outline"
            app:layout_constraintBottom_toBottomOf="@+id/titleLearns"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/new_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5"
            android:background="@drawable/background_round_teal"
            android:paddingHorizontal="@dimen/margin_10"
            android:paddingVertical="3dp"
            android:text="@string/new_member"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibleIf="@{member.referenceCnt == 0}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/name"
            tools:alpha="0.25" />

        <TextView
            android:id="@+id/reference_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{member.referenceCnt.toString()}"
            android:textStyle="bold"
            android:visibleIf="@{member.referenceCnt > 0}"
            app:layout_constraintBottom_toBottomOf="@+id/name"
            app:layout_constraintEnd_toEndOf="@+id/likeButton"
            app:layout_constraintTop_toTopOf="@+id/name"
            tools:text="12" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>